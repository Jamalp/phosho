<h1>Places</h1>
<p>Location based search for Instagram</p>
<div class="search">
	<%= form_tag("/places", method: "get", class: "form-inline", role: "form") do %>
		<div class="form-group">
		  <%= label_tag(:place, "Name", class: "control-label") %>
		  <%= text_field_tag(:place, nil, class: "form-control") %>
		</div>
		<div class="form-group">
		  <%= label_tag(:location, "Location", class: "control-label") %>
		  <%= text_field_tag(:location, nil, class: "form-control") %>
		</div>
		  <%= submit_tag("Search", class: "btn btn-primary") %>
	<% end %>
</div>